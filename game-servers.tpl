<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>
<script>
    let $search = $("#search_filter");

      let $container = $("#game-container").isotope({
        itemSelector: ".game-item",
        layoutMode: "fitRows",
      });

      $search.on("keyup", (e) => {
        $gameItems = $(".game-item");
        if (e.target.value) {
          $qsRegex = new RegExp(e.target.value, "gi");
          for (let i = 0; i < $gameItems.length; i++) {
            if ($gameItems[i].dataset.filterName.match($qsRegex)) {
              $gameItems[i].classList.add("searched-game-item");
            } else {
              $gameItems[i].classList.remove("searched-game-item");
            }
          }

          $container.isotope({
            filter: ".searched-game-item",
          });
        } else {
          for (let i = 0; i < $gameItems.length; i++) {
            $gameItems[i].classList.remove("searched-game-item");
          }
          $container.isotope({
            filter: "*",
          });
        }
      });
</script>
